rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return signedIn() && request.auth.uid == userId;
    }

    function isStringOrNull(value) {
      return value == null || value is string;
    }

    function isValidFeedbackCreate() {
      return signedIn() &&
          request.resource.data.keys().hasOnly([
            'type',
            'message',
            'userId',
            'isAnonymous',
            'appVersion',
            'buildNumber',
            'platform',
            'createdAt',
          ]) &&
          request.resource.data.type in ['support', 'feature', 'bug'] &&
          request.resource.data.message is string &&
          request.resource.data.message.size() > 0 &&
          request.resource.data.message.size() <= 4000 &&
          request.resource.data.userId == request.auth.uid &&
          request.resource.data.isAnonymous is bool &&
          request.resource.data.appVersion is string &&
          request.resource.data.buildNumber is string &&
          request.resource.data.platform is string &&
          request.resource.data.createdAt == request.time;
    }

    function isValidClientEventCreate() {
      return signedIn() &&
          request.resource.data.keys().hasOnly([
            'type',
            'userId',
            'isAnonymous',
            'operation',
            'code',
            'message',
            'platform',
            'createdAt',
          ]) &&
          request.resource.data.type is string &&
          request.resource.data.type.size() > 0 &&
          request.resource.data.userId == request.auth.uid &&
          request.resource.data.isAnonymous is bool &&
          request.resource.data.operation is string &&
          request.resource.data.operation.size() > 0 &&
          request.resource.data.code is string &&
          request.resource.data.code.size() > 0 &&
          isStringOrNull(request.resource.data.message) &&
          request.resource.data.platform is string &&
          request.resource.data.createdAt == request.time;
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId);

      match /scoreSets/{setId} {
        allow read, write: if isOwner(userId);
      }
    }

    match /feedback/{feedbackId} {
      allow create: if isValidFeedbackCreate();
      allow read, update, delete: if false;
    }

    match /clientEvents/{eventId} {
      allow create: if isValidClientEventCreate();
      allow read, update, delete: if false;
    }
  }
}
